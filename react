import React, { useState } from 'react';

function App() {
    const [categories, setCategories] = useState([]);
    const [newCategory, setNewCategory] = useState('');
    const [selectedParent, setSelectedParent] = useState(null);

    const addCategory = () => {
        const newId = categories.length ? Math.max(...categories.map(c => c.id)) + 1 : 1;
        const newCat = { id: newId, name: newCategory, parentId: selectedParent };
        setCategories([...categories, newCat]);
        setNewCategory('');
    };

    const renderCategories = (parentId) => {
        return categories
            .filter(cat => cat.parentId === parentId)
            .map(cat => (
                <li key={cat.id}>
                    {cat.name}
                    <button onClick={() => setSelectedParent(cat.id)}>Criar Subcategoria</button>
                    <ul>{renderCategories(cat.id)}</ul>
                </li>
            ));
    };

    return (
        <div>
            <div>
                <input
                    value={newCategory}
                    onChange={(e) => setNewCategory(e.target.value)}
                />
                <button onClick={addCategory}>Adicionar</button>
                {selectedParent !== null && (
                    <button onClick={() => setSelectedParent(null)}>Cancelar Seleção</button>
                )}
            </div>
            <ul>{renderCategories(selectedParent)}</ul>
        </div>
    );
}

export  {App};
